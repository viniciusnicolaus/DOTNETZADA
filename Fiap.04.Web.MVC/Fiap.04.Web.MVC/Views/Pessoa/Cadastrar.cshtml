@model Fiap._04.Web.MVC.Models.Pessoa
@{
    ViewBag.Title = "Cadastrar";
}



@if(TempData["msg"] != null)
{
    <div class="alert alert-success">@TempData["msg"]</div>

}

<h2>Cadastro de Pessoa</h2>

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(p => p.Nome)
        @Html.TextBoxFor(p => p.Nome, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.DataNascimento)
        @Html.TextBoxFor(p => p.DataNascimento, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.Dependentes)
        @Html.TextBoxFor(p => p.Dependentes, new { @class = "form-control" })
    </div>
    <input type="submit" value="Cadastrar" class="btn btn-primary"/>

}