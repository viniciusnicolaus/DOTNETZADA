@model Fiap08.Web.MVC.ViewModel.ProjetoViewModel

@{
    ViewBag.Title = "Cadastrar";
}

<h2>Cadastrar</h2>

@if (TempData["msg"] != null)
{
    <div class="alert alert-success">@TempData["msg"]</div>
}

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(p => p.Projeto.Titulo)
        @Html.TextBoxFor(p => p.Projeto.Titulo, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.Projeto.MetaInvestimento)
        @Html.TextBoxFor(p => p.Projeto.MetaInvestimento, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.Projeto.DataLimite)
        @Html.TextBoxFor(p => p.Projeto.DataLimite, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.CheckBoxFor(p => p.Projeto.DeducaoIR)
        @Html.LabelFor(p => p.Projeto.DeducaoIR)
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.Projeto.Patrocinador)
        @Html.DropDownListFor(p => p.Projeto.PatrocinadorId,
            Model.Patrocinadores, "Selecione", 
            new { @class = "form-control"})
    </div>
    <input type="submit" value="Cadastrar" class="btn btn-primary" />
}

