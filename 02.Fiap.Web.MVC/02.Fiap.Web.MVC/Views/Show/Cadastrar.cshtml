@model _02.Fiap.Web.MVC.Models.Show

@{
    ViewBag.Title = "Cadastrar";
}

<h2>Cadastrar</h2>

@if (Model != null)
{
    <div class="alert alert-success">
        @TempData["msg"]
    </div>
    <ul>
        <li>@ViewBag.churros</li>
        <li>@Model.Banda</li>
        <li>@Model.Data.ToShortDateString()</li>
        <li>@(Model.Estudante?"Estudante":"Inteira")</li>
        <li>@Model.Valor</li>
    </ul>
}

<div class="container">
    <form action="/Show/Cadastrar" method="post">
        <div class="form-group">
            <label for="banda">Banda: </label>
            <input type="text" name="banda" id="banda" class="form-control" />
        </div>
        <div class="form-group">
            <label for="data">Data: </label>
            <input type="date" name="data" id="data" class="form-control" />
        </div>
        <div class="form-group">
            <label for="valor">Valor: </label>
            <input type="text" name="valor" id="valor" class="form-control" />
        </div>
        <div class="form-group">
            <label  for="estudante">Estudante</label>
            <input type="checkbox" name="estudante" id="estudante" value="true"/>
        </div>

        <div class="form-group">
            <input type="submit" name="cadastrar" value="OK" class="btn btn-success" />
        </div>
    </form>
</div>